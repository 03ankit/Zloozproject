<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext (non-HTTPS) traffic for all domains in debug and release builds -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
    
    <!-- Allow specific IP addresses and domains -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">192.168.235.245</domain>
        <domain includeSubdomains="true">192.168.1.1</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">zlooz.dev.obdemo.com</domain>
    </domain-config>
</network-security-config>

